<%- include("partials/header.ejs") %>
<div class="box" id="heading">
  <h1>Work</h1>
</div>

<div class="box">
  <% newCustItems.forEach(function(item) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= item._id %>"
        onChange="this.form.submit()"
      />
      <p><%= item.name %></p>
    </div>
  </form>
  <% }) %>

  <form class="item" action="/work" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" class="list">+</button>
  </form>
</div>
<%- include("partials/footer.ejs") %>
